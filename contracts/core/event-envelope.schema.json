{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://infraguard/contracts/core/event-envelope.schema.json",
  "title": "InfraGuard Event Envelope",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "event_version",
    "occurred_at",
    "produced_by",
    "trace_id",
    "data"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "type": "string",
      "pattern": "^[a-z]+(?:\\.[a-z0-9_]+)+$"
    },
    "event_version": {
      "type": "string",
      "pattern": "^v[0-9]+$"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "produced_by": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*(?:/[a-z0-9-]+)*$"
    },
    "trace_id": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128
    },
    "correlation_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "data": {
      "type": "object"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean", "null"]
      }
    }
  },
  "additionalProperties": false
}
