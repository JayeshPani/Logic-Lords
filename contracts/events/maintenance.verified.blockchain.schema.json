{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "maintenance.verified.blockchain",
  "allOf": [
    {
      "$ref": "../core/event-envelope.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "event_type": {
          "const": "maintenance.verified.blockchain"
        },
        "data": {
          "type": "object",
          "required": [
            "maintenance_id",
            "asset_id",
            "evidence_hash",
            "tx_hash",
            "network",
            "verified_at"
          ],
          "properties": {
            "maintenance_id": {
              "type": "string",
              "minLength": 1
            },
            "asset_id": {
              "type": "string",
              "minLength": 1
            },
            "evidence_hash": {
              "type": "string",
              "pattern": "^0x[a-fA-F0-9]{64}$"
            },
            "tx_hash": {
              "type": "string",
              "pattern": "^0x[a-fA-F0-9]{64}$"
            },
            "network": {
              "type": "string",
              "minLength": 2,
              "maxLength": 64
            },
            "verified_at": {
              "type": "string",
              "format": "date-time"
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["event_type", "data"]
    }
  ],
  "unevaluatedProperties": false
}
