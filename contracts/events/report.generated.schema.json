{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "report.generated",
  "allOf": [
    {
      "$ref": "../core/event-envelope.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "event_type": {
          "const": "report.generated"
        },
        "data": {
          "type": "object",
          "required": [
            "report_id",
            "maintenance_id",
            "asset_id",
            "report_type",
            "generated_at",
            "evidence_hash",
            "source_trace_ids",
            "source_event_ids"
          ],
          "properties": {
            "report_id": {
              "type": "string",
              "minLength": 1
            },
            "maintenance_id": {
              "type": "string",
              "minLength": 1
            },
            "asset_id": {
              "type": "string",
              "minLength": 1
            },
            "report_type": {
              "type": "string",
              "enum": ["inspection", "maintenance_verification"]
            },
            "generated_at": {
              "type": "string",
              "format": "date-time"
            },
            "evidence_hash": {
              "type": "string",
              "pattern": "^0x[a-fA-F0-9]{64}$"
            },
            "source_trace_ids": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "minLength": 8,
                "maxLength": 128
              }
            },
            "source_event_ids": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "format": "uuid"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["event_type", "data"]
    }
  ],
  "unevaluatedProperties": false
}
